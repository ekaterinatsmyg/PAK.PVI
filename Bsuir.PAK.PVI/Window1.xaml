        mc:Ignorable="d"
        Title="Лабораторная работы ПВИ" Height="309" Width="496.5">
    <Grid Background="#FFF0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
